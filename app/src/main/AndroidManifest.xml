<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.oaklabs.tourguidefortal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BestPlacesActivity"
            android:label="@string/places"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RestaurantsActivity"
            android:label="@string/restaurants"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HotelsActivity"
            android:label="@string/hotels"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SocialActivity"
            android:label="@string/nightlife"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>